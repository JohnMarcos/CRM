<div class="container p-3">
<p><%= simple_form_for prospect do |f| %>
<%= f.input :full_name, label: label_full_name %>
<%= f.input :phone, label: label_phone %>
<%= f.input :email, label: label_email %>
      <%= f.input :status, as: :radio_buttons, collection: [['Prospecto', 'Prospect'], ['Interesado', 'Interested'], ['cliente', 'customer']],
                  label: "Estatus",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "status" }%>
<button class="btn btn-success mt-3 mb-3" role="buttom"><%= f.button :submit, label_summit, class: "text-white" %></button>
<% end %>
 <div class="mt-3">
<button class="btn btn-secondary" role="buttom"><%= link_to 'Volver', root_path, class: "text-white" %></button>
</div>
</div>
